<script>
  const expectedAffiliate = ["bluezy32", "rose2white", "devoraels7"];

  window.onload = () => {
    const url = window.location.href;
    if (!expectedAffiliate.some(aff => url.includes(`affiliate=${aff}`))) {
      alert("Warning: This link may not credit your ClickBank account.");
    }
  }
</script>



<?php
// go.php?product=productname

$affiliate_id = 'youraffiliateid'; // Replace with your ClickBank ID
$products = [
    'product1' => 'droughtusa',
    'product2' => 'ronwill93'
     'product3' => '1keto',
    'product4' => 'aphrodscrt'
      'product5' => 'droughtusa',
    'product6' => 'ronwill93'
     'product7' => '1keto',
    'product8' => 'aphrodscrt'
];

if (!isset($_GET['product']) || !array_key_exists($_GET['product'], $products)) {
    die("Invalid product.");
}

$vendor = $products[$_GET['product']];
$url = "https://$vendor.$affiliate_id.hop.clickbank.net/";

header("Location: $url");
exit();
?>



